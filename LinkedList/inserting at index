#include <iostream>

using namespace std;

class Node
{
    public:
    int data;
    Node* next;
};

void print_List(Node *temp)
{
    while(temp!=NULL)
    {
        cout<<temp->data<<" ";
        temp=temp->next;
    }
}
void create_List(Node *&head , int data)
{
    Node *ptr=new Node();
    ptr->data=data;

    if(head==NULL)
    {
        head=ptr;
    }
    else
    {
        Node *n=head;
        while(n->next!=NULL)
        {
            n=n->next;
        }
        n->next=ptr;
    }
}


Node *insert_at_position(Node *&head, int data, int index)
{
    Node *ptr=new Node();
    Node *p=head;
    int i=0;
    while(i!=(index-1))
    {
        p=p->next;
        i++;
    }
    ptr->data=data;
    ptr->next=p->next;
    p->next=ptr;
    return head;
}
int main()
{
    Node *head=NULL;
    create_List(head, 8);
    create_List(head,7);
    create_List(head,5);
    cout<<"Linked List before insertion"<< " ";
    print_List(head);
    cout<<"\n";
    insert_at_position(head,4,1);
    cout<<"Linked List after insertion" << " ";
    print_List(head);
}
